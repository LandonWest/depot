<!DOCTYPE html>
<html>
<head>
  <title>Weapons Depot</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name  %>">
  <div id="banner">
    <!-- <%= image_tag("tank_logo.jpg") %> -->
    <%= @page_title || "Weapons Depot" %>
  </div>
  <div id="columns">
    <div id="side">
      <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
        <%= render @cart %>
      <% end %>

      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="#">FAQ</a></li>
        <li><a href="#">News</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
      <p> Accessed on: <%= Time.now.strftime('%v @ %I:%M%p') %> </p>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>

</body>
</html>
